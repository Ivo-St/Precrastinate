<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_create_todo_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.n0hands.todoapp.CreateTodoItemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/todo_item_create_title_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Todo Item Name"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/todo_item_create_title_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textColorHint="#80000000"
            android:textColorLink="@color/colorPrimary" />

        <TextView
            android:id="@+id/todo_item_create_subtitle_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Todo Item Subtitle"
            android:textColorLink="@color/cardview_shadow_start_color"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/todo_item_create_subtitle_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text=""
            android:textColorHint="#80000000"
            android:textColorLink="@color/cardview_shadow_start_color" />

        <TextView
            android:id="@+id/todo_item_create_description_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Todo Item Description"
            android:textColorLink="@color/cardview_shadow_start_color"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/todo_item_create_description_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text=""
            android:textColorLink="@color/cardview_shadow_start_color"
            android:layout_weight="0.50"
            android:textColorHint="#80000000" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/todo_item_create_deny"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:tint="@color/colorWhite" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/todo_item_create_accept"
        app:backgroundTint="@android:color/holo_green_light"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_menu_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:tint="@color/colorWhite" />

</RelativeLayout>
